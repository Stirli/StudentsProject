<Window x:Class="StudentsProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:models="clr-namespace:StudentsProject.Models"
        xmlns:mvvm="clr-namespace:StudentsProject.MVVM"
        xmlns:vm="clr-namespace:StudentsProject.ViewModels"
        mc:Ignorable="d" 
        DataContext="{Binding Source={x:Static mvvm:ViewModelService.Instance}, Path=MainViewModel}"
        Title="Студенты" Height="350" Width="525">
    <Window.Resources>
        <mvvm:BoolToDataTemplateConverter x:Key="BoolToDataTemplateConverter"/>
    </Window.Resources>
    <DockPanel>
        <Menu DockPanel.Dock="Top" IsMainMenu="True" ItemsSource="{Binding MainMenu}"  ItemContainerStyle="{StaticResource MenuRelayCommandTemplate}" Background="#00A47F" Foreground="White"/>
        <ScrollViewer DockPanel.Dock="Right" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Commands}"
                          ItemTemplate="{StaticResource RelayCommandTemplate}" /></ScrollViewer>

        <ContentPresenter Content="{Binding}" ContentTemplate="{Binding HasItems, ConverterParameter=StudList|StudEmtyList, Converter={StaticResource BoolToDataTemplateConverter}, Mode=OneWay}" Height="284" />
    </DockPanel>
</Window>

