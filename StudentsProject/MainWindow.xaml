<Window x:Class="StudentsProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentsProject"
        xmlns:vm="clr-namespace:StudentsProject.ViewModels"
        xmlns:rep="clr-namespace:StudentsProject.Rep"
        xmlns:models="clr-namespace:StudentsProject.Models"
        mc:Ignorable="d"
        Title="Студенты" Height="350" Width="525">
    <DockPanel>
        <StackPanel>
            <TextBox Text="{Binding SelectedItem.FirstName}"/>
            <TextBox Text="{Binding SelectedItem.Last}"/>
            <TextBox Text="{Binding SelectedItem.Age}"/>
            <TextBox Text="{Binding SelectedItem.Gender}"/>
            <ItemsControl DockPanel.Dock="Top" ItemsSource="{Binding Commands}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="local:RelayCommand">
                        <Button Content="{Binding Header}" Command="{Binding}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
        <ContentControl Content="{Binding}" ContentTemplateSelector="{StaticResource StudentsListTemplateSelector}"/>
    </DockPanel>
</Window>
